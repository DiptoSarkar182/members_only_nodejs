extends layout

block content
    div.form_container
        h1= title 
        if successMessage
            p.success-message= successMessage
        form(action="", method="POST").form_main
            label(for="field-type") Choose Field Type:
            select(id="field-type" name="fieldType" required)
                option(value="") Select...
                option(value="admin") Admin
                option(value="vip") VIP
            label(for="key") Enter Key:
            input(type="password" id="key" name="key" required)
            button(type="submit") Submit